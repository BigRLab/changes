{
  "linters": {
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "text.max-line-length": 100
    },
    "python": {
      "type": "flake8",
      "include": [
        "(^tests/.*\\.py$)",
        "(^changes/.*\\.py$)"
      ]
    }
  }
}
